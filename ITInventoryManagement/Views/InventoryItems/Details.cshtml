@model ITInventoryManagement.Models.InventoryItem

@{
    ViewData["Title"] = "Inventory Item Details";
}

<h2>Inventory Item Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Serial Number
        </dt>
        <dd class="col-sm-10">
            @Model.SerialNumber
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Brand
        </dt>
        <dd class="col-sm-10">
            @Model.Brand
        </dd>
        <dt class="col-sm-2">
            Stock Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.StockQuantity
        </dd>
        <dt class="col-sm-2">
            Purchase Date
        </dt>
        <dd class="col-sm-10">
            @Model.PurchaseDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Warranty Expiry Date
        </dt>
        <dd class="col-sm-10">
            @Model.WarrantyExpiryDate?.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
